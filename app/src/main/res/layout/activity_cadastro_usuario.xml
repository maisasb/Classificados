<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundAccent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="84dp"
            android:text="@string/login_email"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/fontSizeDefault" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itemId"
            android:layout_below="@+id/itemId"
            android:layout_marginEnd="@dimen/margin_right"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/textPrimary"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailText"
            android:layout_below="@+id/emailText"
            android:layout_marginTop="20dp"
            android:text="@string/login_pass"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/fontSizeDefault" />

        <EditText
            android:id="@+id/senhaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="@dimen/margin_right"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/textPrimary"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textErrorConfirmPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/buttonAdd"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/senhaText"
            android:layout_below="@+id/senhaText"
            android:layout_marginTop="20dp"
            android:text="@string/add_confirmPass"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/fontSizeDefault" />

        <EditText
            android:id="@+id/confirmarSenhaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginEnd="@dimen/margin_right"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/textPrimary"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textErrorConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/confirmarSenhaText"
            android:layout_below="@+id/confirmarSenhaText"
            android:layout_marginTop="13dp"
            android:textColor="@color/error"
            android:textSize="@dimen/fontSizeDefault" />
    </RelativeLayout>
</ScrollView>
